<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/_header'); %>
    </header>
    <main>
      <h3>My URLs</h3>
      <table>
        <thead>
          <tr>
            <th scope="col">Short URL</th>
            <th scope="col">Long URL</th>
          </tr>
        </thead>
        <tbody>
          <% for (let url in urls) { %>
            <tr>
              <td><a href='/u/<%= url %>'><%= url %></a></td>
              <td><%= urls[url] %></td>
              <td>
                <form method="GET" action="/urls/<%= url %>/">
                  <div>
                    <button type="edit" class="btn btn-secondary">Edit</button>
                  </div>
                </form>
              </td>
              <td>
                <form method="POST" action="/urls/<%= url %>/delete">
                  <div>
                    <button type="delete" class="btn btn-secondary">Delete</button>
                  </div>
                </form>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </main>
    <footer>
      <%- include('../partials/_footer'); %>
    </footer>
    </body>
</html>